    { "when": { "input":  "west" }, "apply" : { "model": "pneumaticcraft:block/omnidirectional_hopper_base", "x": 90, "y" : 270 }},
    { "when": { "input":  "east" }, "apply" : { "model": "pneumaticcraft:block/omnidirectional_hopper_base", "x": 90, "y": 90 }}
